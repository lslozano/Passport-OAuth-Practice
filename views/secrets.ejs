<%- include('partials/header') %>

<div class="jumbotron text-center">
  <div class="container">
    <i class="fas fa-key fa-6x"></i>
    <h1 class="display-3">You've Discovered My Secret!</h1>
    <% if (secrets.length == 0) { %>
      <p class="secret-text">No secrets to be told.</p>
    <% } else { %>
      <% secrets.forEach(secretDoc => { %>
        <p class="secret-text"><%= secretDoc.secret %></p>
      <% }); %>
    <% } %>
    <hr>
    
    <a class="btn btn-light btn-lg" href="/logout" role="button">Log Out</a>
    <a class="btn btn-dark btn-lg" href="/submit" role="button">Submit a Secret</a>
    <a class="btn btn-dark btn-lg" href="/" role="button">Back home</a>
  </div>
</div>

<%- include('partials/footer') %>
